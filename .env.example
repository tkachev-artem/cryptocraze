# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/cryptocraze
NEON_DATABASE_URL=your_neon_database_url_here

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Server Configuration
NODE_ENV=development
PORT=3001
FRONTEND_PORT=5173
PROXY_PORT=8080

# Tunnel Configuration (for production)
TUNNEL_URL=https://your-tunnel-domain.com
API_URL=https://your-tunnel-domain.com/api
FRONTEND_URL=https://your-tunnel-domain.com

# Authentication
SESSION_SECRET=your-super-secret-session-key-here
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3001/auth/google/callback

# External APIs
BINANCE_API_KEY=your-binance-api-key
BINANCE_SECRET_KEY=your-binance-secret-key
COINGECKO_API_KEY=your-coingecko-api-key

# Security
CORS_ORIGIN=http://localhost:5173
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:8080

# Features
ENABLE_REDIS_SCALING=true
ENABLE_CLUSTER_MODE=false
ENABLE_RATE_LIMITING=true
ENABLE_SWAGGER=true

# Logging
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true